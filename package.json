{
  "name": "madman",
  "version": "0.0.3",
  "description": "madman CLI",
  "repository": "https://github.com/Raiper34/madman",
  "homepage": "https://madman-cli.netlify.app/installation.html",
  "keywords": [],
  "types": "build/types/types.d.ts",
  "bin": {
    "madman": "bin/madman"
  },
  "scripts": {
    "clean-build": "rimraf -rf ./build",
    "compile": "tsc -p .",
    "copy-templates": "copyfiles ./src/templates/* ./build/templates",
    "build": "npm run clean-build && npm run compile && npm run copy-templates",
    "build:docs": "vitepress build && copy-files-from-to --config docs/copy-files-from-to.json",
    "prepublishOnly": "npm run build",
    "format": "eslint \"**/*.{js,jsx,ts,tsx}\" --fix && prettier \"**/*.{js,jsx,ts,tsx,json}\" --write",
    "test": "jest",
    "watch": "jest --watch",
    "snapupdate": "jest --updateSnapshot",
    "coverage": "jest --coverage",
    "build:bin": "nexe bin/madman --build",
    "docs:dev": "vitepress dev",
    "docs:preview": "vitepress preview",
    "deploy": "npm run build:docs && netlify deploy --dir=build/docs --prod",
    "release": "release-it",
    "changelog": "auto-changelog -p",
    "commit": "cz"
  },
  "files": [
    "build",
    "LICENSE",
    "readme.md",
    "docs",
    "bin"
  ],
  "license": "MIT",
  "dependencies": {
    "gluegun": "latest",
    "less-pager-mini": "^1.2.1",
    "marked": "^15.0.12",
    "marked-terminal": "^7.3.0",
    "simple-git": "^3.28.0",
    "simple-tree-utils": "^3.2.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^12.7.11",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "auto-changelog": "^2.5.0",
    "commitizen": "^4.3.1",
    "copy-files-from-to": "^3.12.1",
    "copyfiles": "^2.4.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "netlify-cli": "^23.9.1",
    "nexe": "^5.0.0-beta.4",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "release-it": "^19.0.5",
    "ts-jest": "^26.5.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "vitepress": "^1.6.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
